pipeline { // Declarative pipelineであることを宣言する
  agent any
  parameters {
        // ticket no
        string(
            name: 'text',
            defaultValue: 'x-japan',
            description: ''
        )
    }
  stages {
    stage('find files') {
        steps {
          copyArtifacts fingerprintArtifacts: true, projectName: 'dev-myRepository'
        }
    }
    stage('delete workspace') {
        steps {
            deleteDir()
        }
    }

    stage('copy artifacts') {
        steps {
            copyArtifacts(projectName: "dev-myRepository")
        }
    }

    stage('find files') {
        steps {
            script {
                files = findFiles(glob: '*.*')
                for (file in files) {
                    echo file.name
                }
            }
        }
    }

  }
}